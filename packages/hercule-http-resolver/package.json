{
  "name": "hercule-http-resolver",
  "version": "4.1.1",
  "description": "HTTP resolver for Hercule file transcluder",
  "main": "./lib/index.js",
  "scripts": {
    "test": "npm run test-units",
    "test-units": "nyc --cache ava --verbose test",
    "posttest": "npm run lint",
    "coverage": "nyc report --reporter=html && open coverage/lcov-report/index.html",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "compile": "babel src --out-dir lib --source-maps",
    "lint": "eslint ./src ./test",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "benchmark": "./test/benchmark.js",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "ava": {
    "babel": {
      "extends": "../../.babelrc"
    },
    "require": "babel-register"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "test"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesramsay/hercule.git"
  },
  "keywords": [
    "markdown",
    "transclude",
    "transclusion",
    "api",
    "blueprint",
    "documentation",
    "apiary",
    "preprocessor"
  ],
  "author": {
    "name": "James Ramsay",
    "url": "http://jramsay.com.au"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesramsay/hercule/issues"
  },
  "homepage": "https://github.com/jamesramsay/hercule",
  "dependencies": {
    "got": "^8.0.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "benchmark": "^2.1.3",
    "codecov": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.0",
    "husky": "^0.14.3",
    "isstream": "^0.1.2",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "nyc": "^11.0.2",
    "prettier": "^1.8.0",
    "validate-commit-msg": "^2.12.2"
  }
}
